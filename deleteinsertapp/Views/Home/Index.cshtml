@model deleteinsertapp.Models.HomeViewModel

<div class="container-fluid test-field">
    <form method="post" action="~/Home/edit">
        <div id="count" title="@Model.Count" class="row  flex-wrap">
            <div class="col-1"></div>
            <div class="col-10">
                <div class="row input-field" id="inputfield1">
                    <div class="col-4">
                        １：
                        <input asp-for="model.LIC1" id="input1" size="40" onInput = "checkForm(this)"
                               autocomplete = "on" list = "test"/>
                        <datalist id="test">
                            @foreach (var item in ViewBag.AutocompleteOptions)
                            {
                                <option value="@item.Value"></option>
                            }
                        </datalist>
                    </div>
                    <div class="col-4">
                        @Html.DropDownListFor(model => model.MM1,
                            (IEnumerable<SelectListItem>)ViewBag.SelectOptions,
                            " 月 ",
                            new { @id = "mm1", value = @Model.MM1 }
                        )
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row input-field" id="inputfield2">
                    <div class="col-4">
                        ２：
                        @Html.TextBoxFor(model => model.LIC2,
                        new { id = "input2", size = "40", onInput = "checkForm(this)", maxlength = '2' })
                    </div>
                    <div class="col-4">
                        @Html.DropDownListFor(model => model.MM2,
                            (IEnumerable<SelectListItem>)ViewBag.SelectOptions,
                            " 月 ",
                            new { @id = "mm2" , value = @Model.MM2 }
                        )
                    </div>
                    <div class="col-4">
                        <input type="button" value="削除" onclick="clickBtn2(2)" />
                    </div>
                </div>
