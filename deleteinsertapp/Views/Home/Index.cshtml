                    </div>
                    <div class="col-4">
                        @Html.DropDownListFor(model => model.MM4,
                            (IEnumerable<SelectListItem>)ViewBag.SelectOptions,
                            " 月 ",
                            new { @id = "mm4", value = @Model.MM4 }
                        )
                    </div>
                    <div class="col-4">
                        <input type="button" value="削除" onclick="clickBtn2(4)" />
                    </div>
                </div>
            </div>
            <div class="row test-field">
                <div class="col-6">
                    <div id="output_message"></div>
                </div>
                <div class="col-3">

                    <input type="button" value="追加" onclick="clickBtn1()" />
                </div>
                <div class="col-3">
                    <button type="submit" class="button btn-primary">Update</button>
                </div>
            </div>

            <div class="col-1"></div>
        </div>
    </form>
</div>


